<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок категории -->
    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/category"
        android:textColor="@color/dark_violet"
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <!-- Сетка категорий -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center">

        <!-- Первая категория -->
        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_category_image_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_home"
                app:tint="@color/violet" />

            <TextView
                android:id="@+id/tv_category_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Жилье" />
        </LinearLayout>

        <!-- Вторая категория -->
        <LinearLayout
            android:id="@+id/ll_transport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_category_image_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_transport"
                app:tint="@color/violet" />

            <TextView
                android:id="@+id/tv_category_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Транспорт" />
        </LinearLayout>

        <!-- Третья категория -->
        <LinearLayout
            android:id="@+id/ll_food"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_category_image_3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_food"
                app:tint="@color/violet" />

            <TextView
                android:id="@+id/tv_category_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Еда и напитки" />
        </LinearLayout>

        <!-- Четвертая категория -->
        <LinearLayout
            android:id="@+id/ll_hobby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_category_image_4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_gaming"
                app:tint="@color/violet"/>

            <TextView
                android:id="@+id/tv_category_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Развлечения" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tecnic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_category_image_5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_computer"
                app:tint="@color/violet" />

            <TextView
                android:id="@+id/tv_category_text_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Техника" />
        </LinearLayout>

        <!-- Вторая категория -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_category_image_6"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_education"
                app:tint="@color/violet" />

            <TextView
                android:id="@+id/tv_category_text_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Образование"
                android:gravity="center" />
        </LinearLayout>

        <!-- Третья категория -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_category_image_7"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/ic_bag_shopping"
                app:tint="@color/violet" />

            <TextView
                android:id="@+id/tv_category_text_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Покупки" />
        </LinearLayout>

        <!-- Четвертая категория -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_category_image_8"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_other"
                app:tint="@color/violet" />

            <TextView
                android:id="@+id/tv_category_text_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Другое"
                android:gravity="center" />
        </LinearLayout>

    </GridLayout>
</LinearLayout>
