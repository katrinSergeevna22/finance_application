<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle_contur_violet"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок категории -->
    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/category"
        android:textColor="@color/dark_violet"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Сетка категорий -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="2">

            <!-- Первая категория -->
            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_category_image_1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/violet" />

                <TextView
                    android:id="@+id/tv_category_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Жилье" />
            </LinearLayout>

            <!-- Вторая категория -->
            <LinearLayout
                android:id="@+id/ll_transport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_category_image_2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_transport"
                    app:tint="@color/violet" />

                <TextView
                    android:id="@+id/tv_category_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Транспорт" />
            </LinearLayout>

            <!-- Третья категория -->
            <LinearLayout
                android:id="@+id/ll_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_category_image_3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_food"
                    app:tint="@color/violet" />

                <TextView
                    android:id="@+id/tv_category_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Еда и напитки" />
            </LinearLayout>

            <!-- Четвертая категория -->
            <LinearLayout
                android:id="@+id/ll_hobby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_category_image_4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_gaming"
                    app:tint="@color/violet" />

                <TextView
                    android:id="@+id/tv_category_text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Развлечения" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tecnic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_category_image_5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_computer"
                    app:tint="@color/violet" />

                <TextView
                    android:id="@+id/tv_category_text_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Техника" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_education"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_category_image_6"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_education"
                    app:tint="@color/violet" />

                <TextView
                    android:id="@+id/tv_category_text_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Образование" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shopping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_category_image_7"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_bag_shopping"
                    app:tint="@color/violet" />

                <TextView
                    android:id="@+id/tv_category_text_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Покупки" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_category_image_8"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_other"
                    app:tint="@color/violet" />

                <TextView
                    android:id="@+id/tv_category_text_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Другое" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_new_category_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_new_category_1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_other"
                    app:tint="@color/violet" />

                <TextView
                    android:id="@+id/tv_new_category_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Другое" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_new_category_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_new_category_2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_other"
                    app:tint="@color/violet" />

                <TextView
                    android:id="@+id/tv_new_category_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Другое" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_new_category_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_new_category_3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_other"
                    app:tint="@color/violet" />

                <TextView
                    android:id="@+id/tv_new_category_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Другое" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_new_category_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_new_category_4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_other"
                    app:tint="@color/violet" />

                <TextView
                    android:id="@+id/tv_new_category_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Другое" />
            </LinearLayout>

        </GridLayout>
    </ScrollView>

    <EditText
        android:id="@+id/et_new_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Напишите собственную категорию"
        android:visibility="invisible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/ibSave"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_rectangle_violet"
            android:foregroundGravity="center"
            android:src="@drawable/shape_rectangle_violet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/open_sans_bold"
            android:text="Категория выбрана"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ibSave"
            app:layout_constraintEnd_toEndOf="@+id/ibSave"
            app:layout_constraintStart_toStartOf="@+id/ibSave"
            app:layout_constraintTop_toTopOf="@+id/ibSave" />


        <ImageButton
            android:id="@+id/ibSelectGoal"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_rectangle_violet"
            android:foregroundGravity="center"
            android:src="@drawable/shape_rectangle_violet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ibSave"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@id/ibSave"
            app:layout_constraintTop_toBottomOf="@id/ibSave"
            app:layout_constraintVertical_bias="0.158" />

        <TextView
            android:id="@+id/tv_SelectGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/open_sans_bold"
            android:text="Накопить на цель!"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ibSelectGoal"
            app:layout_constraintEnd_toEndOf="@+id/ibSelectGoal"
            app:layout_constraintStart_toStartOf="@+id/ibSelectGoal"
            app:layout_constraintTop_toTopOf="@+id/ibSelectGoal" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
